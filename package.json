{
  "name": "tlc-claude-code",
  "version": "1.6.0",
  "description": "TLC - Test Led Coding for Claude Code",
  "bin": {
    "tlc": "./bin/tlc.js",
    "tlc-claude-code": "./bin/install.js",
    "tlc-docs": "./scripts/project-docs.js"
  },
  "files": [
    "bin/",
    ".claude/commands/",
    "dashboard/dist/",
    "dashboard/package.json",
    "server/index.js",
    "server/lib/",
    "server/dashboard/",
    "server/package.json",
    "server/package-lock.json",
    "server/setup.sh",
    "scripts/",
    "templates/",
    "docker-compose.dev.yml",
    "start-dev.ps1",
    "start-dev.sh",
    "start-dev.bat",
    "*.md",
    "install.sh",
    ".gitattributes"
  ],
  "scripts": {
    "postinstall": "node bin/postinstall.js",
    "build": "cd dashboard && npm run build",
    "prepublishOnly": "npm run build",
    "docs": "node scripts/docs-update.js",
    "docs:check": "node scripts/docs-update.js --check",
    "docs:screenshots": "node scripts/generate-screenshots.js",
    "docs:capture": "node scripts/capture-screenshots.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurgencalleja/TLC.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "tlc",
    "test-led-coding",
    "tdd",
    "testing"
  ],
  "author": "Jurgen Calleja",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "playwright": "^1.58.1",
    "text-to-image": "^8.0.1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7"
  }
}
